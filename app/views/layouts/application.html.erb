<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class='show_notice'>
    <% if notice %>
    <%= notice %>
    <% end %>
  </div>
  <div class='show_alert'>
    <% if alert %>
    <%= alert %>
    <% end %>
  </div>
<%= yield %>
</div>
<%= render 'shared/footer' %>


</body>
</html>
