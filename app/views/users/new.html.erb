<div class="row" style="padding-top:0%;">
  <div class="col"></div>
  <div class="col-md-10">


<h1>Create an Account</h1>
<%= form_for @user do |f| %>
<div class='field' style='100%'>
<%= f.text_field :userid,placeholder:"Input user Id ",class:'form-control' %>
<%= f.email_field :email,placeholder:'Input Email Id',class:'form-control'%>
<%= f.password_field :password,placeholder:'Create Password',class:'form-control'%>


<%= f.submit 'Create Account' %>
<% end %>
</div>

<p>
   <%= link_to 'Articles',articles_path,class:'btn btn-md btn-info'  %>
  <%= link_to 'Home',welcome_index_path,class:'btn btn-md btn-primary' %>
</p>
</div>
<div class="col"></div>
</div>
